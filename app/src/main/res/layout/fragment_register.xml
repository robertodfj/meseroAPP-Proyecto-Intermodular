<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegisterFragment">

    <!-- Imagen superior -->
    <ImageView
        android:id="@+id/imageViewRegister"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo2" />

    <!-- CardView sobrepuesta -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-45dp"
        app:cardCornerRadius="40dp"
        android:elevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitleRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="¡HEY! ¿Eres nuevo?"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"/>

            <!-- Nombre completo -->
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Nombre Completo"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:backgroundTint="?attr/colorOnSurface"/>

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:backgroundTint="?attr/colorOnSurface"/>

            <!-- Spinner rol -->
            <Spinner
                android:id="@+id/spinnerOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="16dp" />

            <!-- Contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="12dp"
                android:backgroundTint="?attr/colorOnSurface"/>

            <!-- Codigo bar -->
            <EditText
                android:id="@+id/etBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Codigo bar"
                android:inputType="textPassword"
                android:padding="12dp"
                android:backgroundTint="?attr/colorOnSurface"/>

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Registrarse"/>

            <!-- Texto login -->
            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:gravity="center"
                android:text="¿Ya tienes una cuenta? Inicia sesión aquí."
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvBossRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:gravity="center"
                android:text="¿Eres gerente? Crea un bar aquí."
                android:clickable="true"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>